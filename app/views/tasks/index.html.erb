<p id="notice"><%= notice %></p>

<!--specify whose tasks the list belongs to-->
<h1> <%= current_user.first_name%>'s Tasks (<%= @tasks.count%>)</h1> 

<table>
  <thead>
    <tr>
      <!--<th>User_id</th>-->
      <th>Title</th>
      <th>Description</th>
      <th>Complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <!--<td><%#= task.user.id%></td>-->      
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.complete %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

